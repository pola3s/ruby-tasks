<h1>Nowy wpis</h1>

<%= form_for @entry do |f| %>
  <p> 
	<%= f.label :name, "Twoje imię:" %><br/>
	<%= f.text_field :name %>
  </p>
  <p>
	<%= f.label :comment, "Twój komentarz:" %><br/>
	<%= f.text_area :comment %>
  </p>
  <p>
	<%= f.label :avatar_url, "Twój avatar:" %><br/>
	<%= f.text_area :avatar_url %>
  </p>



  <%= f.submit "Dodaj" %>
<% end %>
